<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <h1><center>Sign Up</center></h1>
        <form action="/user/signup" method="POST" style="position: relative; top: 10px;"enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">User-Name</label>
                <input class="form-control"type="text" placeholder="username" name="username" id="name">
            </div>
            <div class="form-group">
              <label for="image">Profile-Image</label>
              <input type="file" id="image" name="profileimage" accept="image/*" required>
          </div>
            <div class="form-group">
              <label for="email">Email</label>
                <input class="form-control" type="email" name="email" placeholder="email"id="email">
            </div>          
          <div class="form-group">
            <label for="password">Password</label>
        <input class="form-control"type="password" placeholder="password" name="password"id="password">
    </div>
    <div class="form-group">
      <label for="adminCode">Admin-Code</label>
      <input class="form-control" type="password" name="adminCode" placeholder="Admin code"id="adminCode">
  </div>
     <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
      </div>    
    </form>
    <br>
    <div class="col-md-12">
      <center>Already Have an account? <a href="/user/signin">Login</a></center>
    </div>
    </div>    
    </div>
</div>
<%- include ("../partials/footer") %>