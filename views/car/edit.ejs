<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
        <h1>Edit <%= car.name %></h1>
        <form action="/cars/<%= car._id %>/?_method=PUT" method="POST" enctype="multipart/form-data" style="position: relative; top: 5px;">
            <div class="form-group">
                <input class="form-control"type="text" placeholder="name" name="name" value="<%= car.name %>">
            </div>
            <div class="form-group">
                <input class="form-control"type="text" name="placename" value="<%= car.placename %>">
            </div>
            <div class="form-group">
                <input class="form-control"type="number" name="postcode" value="<%= car.postcode %>">
            </div>
            <div class="form-group">
                <input class="form-control"type="number" name="distance" value="<%= car.distance %>">
            </div>
            <div class="form-group">
                <input class="form-control"type="number" name="price" value="<%= car.price %>" min="0.5" step="0.5">
            </div>
            <div class="form-group">
                <% car.images.forEach(function(img,i){ %>
                <label for="image">Image</label>
                <input type="file" id="image" name="editImages" accept="image/*" multiple>
               <%}) %>
            </div>
    <div class="form-group">
        <input class="form-control"type="text" placeholder="description" name="description" value="<%= car.description %>">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Update!</button>
      </div>    
    </form>
    <br>
    <a href="/cars">Go Back</a>
    </div>    
    </div>
</div>

<%- include ("../partials/footer") %>
